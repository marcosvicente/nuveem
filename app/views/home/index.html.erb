<div class="w-full max-w-24 p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700 "> 

  <% if notice.presence %> 
    <div class="alert alert-primary" role="alert">
      <div class="alert-body">
        <%= notice %>
      </div>
    </div>
  <% end %>

  <% if @companies_sales.empty? %>
    <h2 class="text-xl font-medium text-gray-900 dark:text-white py-3">Do not have a sales</h2>
  <% else %>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">Purchaser Name</th>
            <th scope="col" class="px-6 py-3">Item Description</th>
            <th scope="col" class="px-6 py-3">Item Price</th>
            <th scope="col" class="px-6 py-3">Purchase Count</th>
            <th scope="col" class="px-6 py-3">Merchant Address</th>
            <th scope="col" class="px-6 py-3">Merchant Name</th>
            <th scope="col" class="px-6 py-3">Link File</th>
          </tr>
        </thead>
        <tbody>
        <% @companies_sales.each do |sales| %>
          <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
            <td class="px-6 py-4"><%= sales.purchaser_name %></td>
            <td class="px-6 py-4"><%= sales.item_description %></td>
            <td class="px-6 py-4"><%= sales.item_price %></td>
            <td class="px-6 py-4"><%= sales.purchase_count %></td>
            <td class="px-6 py-4"><%= sales.merchant_address %></td>
            <td class="px-6 py-4"><%= sales.merchant_name %></td>
            <td class="px-6 py-4"><%= link_to 'Sales File Upload', sale_file_path(sales.sale_file_id), class: "text-blue-600 dark:text-blue-500 hover:underline" %></td>
          </tr>
        <% end %>    
        </tbody>
      </table>
    </div>
    <div class="mx-auto w-46 mt-6">
      <h2 class="text-xl font-semibold"> Total all-time: <%= @total_sale_all_time %></h2>
      <%= paginate @companies_sales, class: "paginate"%>
    </div>
  <% end %>


  <%= link_to 'Sales File Upload', new_sale_file_path, class: "inline-flex items-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5  my-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 " %>
</div>
